Proceso cap5_7
	Definir  num Como Entero;
	Escribir "Ingrese un  número del 1 al 7 : ";
	leer num;
	
	Segun num Hacer
		1: Escribir "Lunes";
		2: Escribir "Martes";
		3: Escribir "Miércoles";
		4: Escribir "Jueves";
		5: Escribir "Viernes";
		6: Escribir "Sábado";
		7: Escribir "Domingo";
		De Otro Modo:
			Escribir "No existe día para ese número ingresado, recuerda que debe ser del  1 al 7";
	FinSegun
	
FinProceso
